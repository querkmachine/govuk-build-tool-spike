{
  "name": "vanilla-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:js:compile": "esbuild ../node_modules/govuk-frontend/govuk/all.js --bundle --minify > ./output/all.js",
    "build:scss": "npm-run-all build:scss:*",
    "build:scss:compile": "sass ../node_modules/govuk-frontend/govuk/all.scss | postcss --use autoprefixer --output ./output/all.css",
    "build:scss:compileIe": "sass ../node_modules/govuk-frontend/govuk/all-ie8.scss --style compressed | postcss --use autoprefixer oldie --output ./output/all-ie8.css",
    "build:assets:copy": "mkdir ./output/assets/ && cp ../node_modules/govuk-frontend/govuk/assets/**/* ./output/assets/",
    "build": "npm-run-all --parallel build:*"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "cssnano": "^5.1.5",
    "esbuild": "^0.14.27",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "sass": "^1.49.9"
  }
}
